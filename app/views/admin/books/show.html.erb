<div class="container">
  <div class="row">
    <div class="col-md-12 col-md-offset-1 text-center">
      <table border="1">
        <thead>
<br><br>
          <h3 class="text-center"><%= @book.name %>の詳細ページ</h3>
<br>
          <tr>
            <td style="background-color:white;"><%= link_to "編集する", edit_admin_book_path(@book) %></td>
          </tr>
        </thead>
<br>
        <tbody>
          <tr>
            <th>本のタイトル</th>
            <td><%= @book.name %></td>
          </tr>
          <tr>
            <th>本の感想</th>
            <td><%= @book.body %></td>
          </tr>
          <tr>
            <th>本の写真</th>
            <!--<td><!%= attachment_image_tag @book, :book_image, :fill, 300, 300 %></td>-->
            <td>
            <% if @book.book_image.present? %>
              <%= attachment_image_tag @book, :book_image, size: "200x200" %>
            <% else %>
              <%= image_tag "no_image.jpg", size: "200x200" %>
            <% end %>
            </td>
          </tr>
          <tr>
            <% if @book.user == current_user %>
            <td><%= link_to "編集", edit_book_path(@book) %></td>
            <% else %>
            <th>いいね数</th>
            <% end %>
            <td>
            <% if @book.favorited_by?(@book.user) %>
              ♥<%= @book.favorites.count %>いいね
            <% else %>
              ♡<%= @book.favorites.count %>いいね
            <% end %>
            </td>
          </tr>
        </tbody>
      </table>

<br><br>
  <div class="row">
    <div class="col-md-12 col-md-offset-1 text-center">
      <table border="1">
        <thead>
          <tr>
            <td>user名</td>
            <td>コメント</td>
          </tr>
        </thead>
        <% if @book.book_comments.empty? %>
        <tbody>
          <tr>
            <td colspan="2">コメントは投稿されていません</td>
          </tr>
        </body>
        <% else %>
        <% @book.book_comments.each do |book_comment| %>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(book_comment.user) do %>
                <%= book_comment.user.name %>
              <% end %>
            </td>
            <td>
              <%= book_comment.comment %>
              <%= link_to "削除", admin_book_book_comment_path(@book, book_comment), method: :delete %>
            </td>
          </td>
        </tbody>
        <% end %>
        <% end %>
      </table>
    </div>
  </div>
</div>